<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.pfd.person.dao.PersonDao">

	<select id="get" resultType="com.bootdo.pfd.person.domain.PersonDO">
		select `ID`,`NAME`,`GX`,`XB` from pfd_person where ID = #{value}
	</select>

	<select id="list" resultType="com.bootdo.pfd.person.domain.PersonDO">
		select `ID`,`NAME`,`GX`,`XB` from pfd_person
        <where>  
		  		  <if test="id != null and id != ''"> and ID = #{id} </if>
		  		  <if test="name != null and name != ''"> and NAME = #{name} </if>
		  		  <if test="gx != null and gx != ''"> and GX = #{gx} </if>
		  		  <if test="xb != null and xb != ''"> and XB = #{xb} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by ID desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from pfd_person
		 <where>  
		  		  <if test="id != null and id != ''"> and ID = #{id} </if>
		  		  <if test="name != null and name != ''"> and NAME = #{name} </if>
		  		  <if test="gx != null and gx != ''"> and GX = #{gx} </if>
		  		  <if test="xb != null and xb != ''"> and XB = #{xb} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.pfd.person.domain.PersonDO">
		insert into pfd_person
		(
			`ID`, 
			`NAME`, 
			`GX`, 
			`XB`
		)
		values
		(
			#{id}, 
			#{name}, 
			#{gx}, 
			#{xb}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.pfd.person.domain.PersonDO">
		update pfd_person 
		<set>
			<if test="name != null">`NAME` = #{name}, </if>
			<if test="gx != null">`GX` = #{gx}, </if>
			<if test="xb != null">`XB` = #{xb}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="remove">
		delete from pfd_person where ID = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from pfd_person where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>